rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    // Custom claim (set via Admin SDK / Cloud Functions / CLI)
    function isGM() {
      return signedIn() && request.auth.token.gm == true;
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function gmOrSelf(uid) {
      return isGM() || isSelf(uid);
    }

    // --- New schema ---
    // users/{uid}
    // users/{uid}/characters/{characterId}
    match /users/{uid} {
      allow get, create, update, delete: if gmOrSelf(uid);
      allow list: if isGM();

      match /characters/{characterId} {
        allow read, write: if gmOrSelf(uid);
      }

      // Default deny for anything else under /users
      match /{subpath=**} {
        allow read, write: if false;
      }
    }

    // --- Legacy (single doc per user) ---
    // characters/{uid}
    match /characters/{uid} {
      allow read, write: if gmOrSelf(uid);
    }

    // --- Campaigns (future) ---
    // Locked to GM-only until the campaign membership flow is implemented.
    match /campaigns/{campaignId} {
      allow read, write: if isGM();
      match /{subpath=**} {
        allow read, write: if isGM();
      }
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
